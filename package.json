{
  "name": "kilo-dashboard",
  "version": "0.0.1",
  "description": "macOS â†’ Colima VM â†’ Docker resource hierarchy monitor. Built with Ink.",
  "type": "module",
  "bin": {
    "dm": "./bin/dm.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "if ! head -1 bin/dm.js | grep -q '#!/usr/bin/env node'; then echo '#!/usr/bin/env node' | cat - bin/dm.js > bin/dm.js.tmp && mv bin/dm.js.tmp bin/dm.js; fi && chmod +x bin/dm.js",
    "dev": "tsc --watch",
    "start": "node bin/dm.js",
    "dashboard": "node bin/dm.js dashboard",
    "status": "node bin/dm.js status",
    "clean": "node bin/dm.js clean"
  },
  "keywords": ["docker", "colima", "macos", "resources", "cli", "ink"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.14.2"
}
